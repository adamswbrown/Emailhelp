<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Email Triage</title>
    <link rel="stylesheet" href="style.css">
</head>
<body>
    <div id="app">
        <!-- Header -->
        <header class="app-header">
            <div class="header-left">
                <h1>ğŸ“§ Email Triage</h1>
                <span id="status-text" class="status-text">Loading...</span>
            </div>
            <div class="header-right">
                <button onclick="runEvaluation()" class="btn-evaluate" title="Run categorization evaluation">ğŸ“Š Evaluate</button>
                <button onclick="refreshEmails()" class="btn-refresh">ğŸ”„ Refresh</button>
                <div class="auto-refresh-toggle">
                    <label>
                        <input type="checkbox" id="auto-refresh" checked onchange="toggleAutoRefresh()">
                        Auto-refresh
                    </label>
                </div>
            </div>
        </header>
        
        <!-- Category badges -->
        <div class="category-badges">
            <button class="badge badge-action" onclick="filterCategory('ACTION')">
                ğŸ”´ ACTION: <span id="action-count">0</span>
            </button>
            <button class="badge badge-fyi" onclick="filterCategory('FYI')">
                ğŸŸ¡ FYI: <span id="fyi-count">0</span>
            </button>
            <button class="badge badge-ignore" onclick="filterCategory('IGNORE')">
                âšª IGNORE: <span id="ignore-count">0</span>
            </button>
            <button class="badge badge-all" onclick="filterCategory(null)">
                All: <span id="total-count">0</span>
            </button>
        </div>
        
        <!-- Emails container -->
        <div id="emails-container" class="emails-container">
            <!-- Emails will be rendered here -->
        </div>
        
        <!-- Evaluation modal -->
        <div id="evaluation-modal" class="modal">
            <div class="modal-content modal-large">
                <div class="modal-header">
                    <h2>ğŸ“Š Categorization Evaluation</h2>
                    <button class="close-btn" onclick="closeEvaluationModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div id="evaluation-loading" class="loading-state" style="display: none;">
                        <p>Running evaluation... This may take a minute.</p>
                    </div>
                    <div id="evaluation-results" class="evaluation-results">
                        <!-- Results will be displayed here -->
                    </div>
                    <div class="threshold-controls" style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #ddd;">
                        <h3>Adjust Thresholds</h3>
                        <div class="threshold-item">
                            <label>
                                ACTION Threshold: <span id="current-action-threshold">30</span>
                                <input type="range" id="action-threshold-slider" min="20" max="90" value="30" onchange="updateThresholdDisplay(this.value)" oninput="updateThresholdDisplay(this.value)">
                                <span id="threshold-value-display">30</span>
                            </label>
                            <button onclick="applyThreshold()" class="btn-primary" style="margin-left: 10px;">Apply & Refresh</button>
                        </div>
                        <div class="threshold-info">
                            <small>Current FYI threshold: <span id="current-fyi-threshold">20</span> (auto-adjusted)</small>
                        </div>
                    </div>
                </div>
                <div class="modal-actions">
                    <button onclick="closeEvaluationModal()" class="btn-secondary">Close</button>
                </div>
            </div>
        </div>

        <!-- Reply modal -->
        <div id="reply-modal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h2>Reply to: <span id="reply-to"></span></h2>
                    <button class="close-btn" onclick="closeReplyModal()">&times;</button>
                </div>
                <div class="modal-body">
                    <div id="reply-subject" class="reply-subject"></div>
                    
                    <div class="templates-section">
                        <label>Quick Templates:</label>
                        <div id="templates-container" class="templates-container">
                            <!-- Templates will be loaded here -->
                        </div>
                    </div>
                    
                    <div class="compose-section">
                        <textarea id="reply-body" placeholder="Type your reply here..." rows="10"></textarea>
                    </div>
                    
                    <div class="modal-actions">
                        <button onclick="draftWithGPT()" class="btn-secondary">ğŸ“‹ Draft with GPT</button>
                        <button onclick="openReplyInMail()" class="btn-secondary">âœ‰ï¸ Edit in Mail.app</button>
                        <button onclick="sendReply()" class="btn-primary">ğŸ“¤ Send Now</button>
                        <button onclick="closeReplyModal()" class="btn-secondary">Cancel</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <script src="app.js"></script>
</body>
</html>
